<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Activities.CreateAccountActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:fontFamily="@font/signika"
        android:text="Hellow"
        android:textColor="@color/white"
        android:textSize="60dp"
        android:textStyle="bold"
        android:id="@+id/hellow_create"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="60dp"
        android:background="@drawable/faded_background"
        android:layout_marginTop="150dp"
        android:layout_below="@+id/hellow_create">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/signika"
            android:textColor="#535252"
            android:text="Create your account and start"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:textSize="22dp"
            android:id="@+id/create"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/signika"
            android:textColor="#535252"
            android:text="earning now!!"
            android:layout_marginLeft="20dp"
            android:textSize="22dp"
            android:layout_below="@+id/create"
            android:id="@+id/earning"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/signika"
            android:textColor="#535252"
            android:text="It's Super quick"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/earning"
            android:id="@+id/quick"
            android:layout_marginTop="2dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="40dp"
            android:layout_below="@+id/quick"
            android:background="@drawable/login_button_background"
            android:layout_marginTop="15dp"
            android:id="@+id/number_create">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Mobile Number"
                android:layout_centerVertical="true"
                android:textSize="20dp"
                android:fontFamily="@font/signika"
                android:layout_marginLeft="15dp"/>


            <RelativeLayout
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:background="@drawable/get_otp_backgroud_unfaded"
                android:layout_alignParentRight="true">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/arrow_forward_white"
                    />

            </RelativeLayout>


        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>